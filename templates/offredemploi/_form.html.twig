{% extends 'base.html.twig' %}

{% block body %}
<div style="display: flex;align-items: center:justify-content: center">
    <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header">
            <h3 class="text-center font-weight-light my-4">AJOUTER</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="inputText">Titre</label>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="inputText">Description</label>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="inputText">Salaire</label>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.salaire, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="inputText">Status</label>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="inputText">Entreprise</label>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.entreprise, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
<script>
    function previewImage(event) {
        var input = event.target;
        var reader = new FileReader();

        reader.onload = function () {
            var imagePreview = document.getElementById('image-preview');
            imagePreview.src = reader.result;
            imagePreview.style.display = 'block';
        };

        reader.readAsDataURL(input.files[0]);
    }
</script>
{% endblock %}
