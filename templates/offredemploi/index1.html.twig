{% extends 'base1.html.twig' %}

{% block title %}Offre d'emploi index{% endblock %}

{% block body %}
    <h1>Offredemploi index</h1>
    <div class="container">
        <div class="row">
            {% for offredemploi in offredemplois %}
                <div class="col-lg-4" style="padding-bottom: 20px;">
                    <div class="card shadow-lg border-0 rounded-lg">
                        <div class="card-body">
                            <h4 class="card-title">{{ offredemploi.titre }}</h4>
                            <p class="card-text">{{ offredemploi.description }}</p>
                            <ul class="list-inline">
                                <li class="list-inline-item">Salaire: {{ offredemploi.salaire }}</li>
                                <li class="list-inline-item">Status: {{ offredemploi.status }}</li>
                            </ul>
                            <a href="{{ path('app_offredemploi_show1', {'id': offredemploi.id}) }}" class="btn btn-primary">Show</a>
                            <a href="#" class="btn btn-secondary">Apply</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p>No records found.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
