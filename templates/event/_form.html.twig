

{% block body %}
<div style="display: flex;align-items: center:justify-content: center">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-body">
                                        {{ form_start(f)}}
                                            <div class="row mb-3">
                                                 <div class="col-md-6">
                                                    <label for="inputText">Nom Event</label>
                                                 </div>
                                             <div class="col-md-6">
                                                     {{ form_widget(f.name, {'attr': {'class': 'form-control'}}) }}
                                             </div>
                                            </div>

                                             <div class="row mb-3">
                                                 <div class="col-md-6">
                                                    <label for="inputText">type Event</label>
                                                 </div>
                                             <div class="col-md-6">
                                                     {{ form_widget(f.type, {'attr': {'class': 'form-control'}}) }}
                                             </div>
                                            </div>

                                             <div class="row mb-3">
                                                 <div class="col-md-6">
                                                    <label for="inputText">Lieu Event</label>
                                                 </div>
                                             <div class="col-md-6">
                                                     {{ form_widget(f.localisation, {'attr': {'class': 'form-control'}}) }}
                                             </div>
                                            </div>

                                             <div class="row mb-3">
                                                 <div class="col-md-6">
                                                    <label for="inputText">date</label>
                                                 </div>
                                             <div class="col-md-6">
                                                     {{ form_widget(f.date, {'attr': {'class': 'form-control'}}) }}
                                             </div>
                                            </div>
                                            
                                            
                                                   <div class="row mb-3">
                                                 <div class="col-md-6">
                                                    <label for="inputText">description</label>
                                                 </div>
                                             <div class="col-md-6">
                                                     {{ form_widget(f.description, {'attr': {'class': 'form-control'}}) }}
                                             </div>
                                            </div>
                                                  <div class="row mb-3">
                                                 <div class="col-md-6">
                                                    <label for="inputText">longitude</label>
                                                 </div>
                                             <div class="col-md-6">
                                                     {{ form_widget(f.longitude, {'attr': {'class': 'form-control'}}) }}
                                             </div>
                                            </div>
                                                  <div class="row mb-3">
                                                 <div class="col-md-6">
                                                    <label for="inputText">latitude</label>
                                                 </div>
                                             <div class="col-md-6">
                                                     {{ form_widget(f.latitude, {'attr': {'class': 'form-control'}}) }}
                                             </div>
                                            </div>
                                              <!-- Add image preview section -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="inputText">Image</label> 
                </div>
                <div class="col-md-6">
                    {{ form_widget(f.eventpath, {'attr': {'class': 'form-control', 'id': 'image-input', 'onchange': 'previewImage(event)'}}) }}
                    <img id="image-preview" src="#" alt="Image Preview" style="max-width: 100%; max-height: 200px; margin-top: 10px; display: none;">
                </div>
            </div>
            <!-- End of image preview section -->  

                                        
                                                
                                             <div class="col-md-6">
<button class="button">{{ button_label|default('Save') }}</button>                                             </div>
                                           

                                        {{ form_end(f)}}
                                    </div>
                                   
                                </div>
                            </div>
                                                        
                            <script>
    function previewImage(event) {
        var input = event.target;
        var reader = new FileReader();

        reader.onload = function () {
            var imagePreview = document.getElementById('image-preview');
            imagePreview.src = reader.result;
            imagePreview.style.display = 'block';
        };

        reader.readAsDataURL(input.files[0]);
    }
</script>
{% endblock %}